<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Puzzle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/onPrimary_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/onSecondary_color</item>

        <!-- Disabled brand color. -->
        <item name="colorPrimaryContainer">@color/disabled_color</item>
        <item name="colorOnPrimaryContainer">@color/onDisabled_color</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="Theme.Puzzle.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:background">@drawable/all_toolbar_background</item>
        <item name="android:paddingTop">@dimen/toolbar_top_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_bottom_padding</item>
        <item name="android:paddingStart">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Theme.Puzzle.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/all_search_view_background</item>
        <item name="searchIcon">@drawable/all_search_icon</item>
        <item name="queryHint">골프장 검색하기</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="Theme.Puzzle.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Puzzle</item>
        <item name="android:windowBackground">@drawable/splash_background</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item><!--Todo 바텀바색상 초록색으로-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Puzzle.Button.Inaddvideo" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/Theme.Puzzle.TextSmall</item>
    </style>
</resources>